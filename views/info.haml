!!! 5
%html
  %head
    %meta{:charset => 'UTF-8'}/
    %meta{:content => 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no',
          :name=> 'viewport'}/
    / @source:https://github.com/mattkenney/soc
    %title soc
    %link{:href => "#{base}css/style.css", :rel => 'stylesheet'}
  %body.soc_body{:class => ('soc_night' if session[:night])}
    %form{:action => 'info', :method => 'post'}
      .soc_header{:class => ('soc_night' if session[:night])}
        %button &lt;
      .soc_info
        - if name
          %dl
            %dt name
            %dd= name
          %div
            %input{:class => 'soc_button', :name => 'x', :type => 'submit', :value => 'log out'}
          %div
            %dl
              %dt Pocket
              %dd
                %input{:class => 'soc_button', :name => 'x', :type => 'submit',
                       :value => (pocket ? 'disconnect' : 'connect')}
        %input{ :class => 'soc_button',
                :name => 'i', :type => 'submit',
                :value => (session[:night] ? 'turn off night mode' : 'turn on night mode')}
      .soc_footer{:class => ('soc_night' if session[:night])}
